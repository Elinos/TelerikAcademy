<UserControl x:Class="FilesShelf.App.Controls.StarRate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">       
        <!--STARS-->
        <StackPanel MouseLeave="Stars_MouseLeave" x:Name="Stars_Stack" Orientation="Horizontal">
            <Image Tag="1" Width="30" Source="/FilesShelf.App;component/Images/starGray.bmp"/>
            <Image Tag="2" Width="30" Source="/FilesShelf.App;component/Images/starGray.bmp"/>
            <Image Tag="3" Width="30" Source="/FilesShelf.App;component/Images/starGray.bmp"/>
            <Image Tag="4" Width="30" Source="/FilesShelf.App;component/Images/starGray.bmp"/>
            <Image Tag="5" Width="30" Source="/FilesShelf.App;component/Images/starGray.bmp"/>            
        </StackPanel>
        <Label VerticalAlignment="Center" x:Name="Rating_Label" Grid.Column="1" FontSize="18">0/5</Label>
    </StackPanel>
</UserControl>
